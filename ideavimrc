" Reload me with :, then `:reload ~/.ideavimrc`

" @group leader

set visualbell
set noerrorbells

let mapleader=" "

" @group dvorak

" search
noremap l n
noremap L N

" movement
noremap d h
noremap h j
noremap t k
noremap n l

" bottom of screen
noremap <s-h> L
" top of screen
noremap <s-t> H
" middle of screen
noremap <s-n> M

" sort
noremap <space>s :sort<cr>

" deletion
noremap j d

" 'til
noremap k t
noremap <s-k> <s-t>

" @group settings
set noexpandtab
set clipboard=unnamed
